pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Perform the build steps
            }
        }
        
        stage('Test') {
            steps {
                // Perform unit tests
            }
        }
        
        stage('Deploy') {
            steps {
                parallel (
                    'Deploy to Staging': {
                        when {
                            branch 'develop' // Only deploy on the develop branch
                        }
                        steps {
                            // Deploy to staging environment
                        }
                    },
                    'Deploy to Production': {
                        when {
                            branch 'master' // Only deploy on the master branch
                        }
                        steps {
                            // Deploy to production environment
                        }
                    }
                )
            }
        }
        
        stage('Cleanup') {
            steps {
                try {
                    // Perform cleanup steps
                } catch (Exception e) {
                    // Handle any exceptions that occur during cleanup
                    // For example, send notifications or log errors
                }
            }
        }
    }
}
